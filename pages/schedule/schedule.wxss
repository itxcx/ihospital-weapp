.m-doctor-info {
    position: relative;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    background: white;
    border-bottom: solid 1px rgba(216, 216, 216, 1);
}
.m-doctor-info .m-doctor-info_img {
    margin: 15rpx;
    width: 100rpx;
    height: 100rpx;
}
.m-doctor-info_text {
    flex: 1;
    padding: 0 15rpx;
}
.m-doctor-info_text_name {
    color: #808080;
    font-size: 25rpx;
}
.m-doctor-info_text_info {
    color: #808080;
    font-size: 20rpx;
}
.m-doctor-info_text_icon {
    position: absolute;
    top: 0;
    right: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    background: rgba(60, 160, 255, 0.3);
    opacity: 0.5;
    width: 100rpx;
    height: 80rpx;
    border-radius: 5rpx;
}
.m-doctor-info_hot {
    text-align: center;
    font-size: 20rpx;
    color: #3CA0FF;
    margin: 5rpx 15rpx;
    border-bottom: 2rpx solid white;
}
.m-doctor-info_fee {
    text-align: center;
    font-size: 20rpx;
    color: #3CA0FF;
    margin: 5rpx 15rpx;
}
.m-doctor-info_detail {
    background: white;
    border-bottom: solid 1px rgba(216, 216, 216, 1);
}
.m-doctor-info_detail_text {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: flex-start;
}
.m-doctor-info_detail_text_title {
    color: #808080;
    margin: 10rpx 20rpx;
    font-size: 25rpx;
}
.m-doctor-info_detail_text_item {
    color: #505050;
    flex: 1;
    margin: 10rpx 20rpx;
    font-size: 25rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}
.m-calendar-body-box{
    background: white;
}
.tr {
    width: 100%;
    display: flex;
    justify-content: space-between;
}
.th,.td {
    color: #808080;
    padding: 10rpx;
    text-align: center;
    width:100%;
}
.td {
    font-weight: 600;
}
.currentDay {
    color: red;
}
.currentMonth {
	color: #999;
}
.otherMonth{
	color: #ede;
}
.m-calendar-table {
    margin: 10rpx 0;
}
.m-calendar-title{
    position: relative;
    height: 70rpx;
    line-height: 70rpx;
}
.m-calendar-title-name {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: #505050;
}
.m-calendar-title-month{
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    font-weight: 600;
}
.m-calendar-title-month_text{
    margin-right: 20rpx;
}
.m-calendar_current {
    color: red;
    border-bottom: 4rpx solid red;
}